</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const threshold = 499.99;
    const bar = document.getElementById('free-shipping-bar');

    function formatCurrency(value) {
      return value.toLocaleString('pt-BR', {
        style: 'currency',
        currency: 'BRL'
      });
    }

    function updateFreeShippingBar() {
      fetch('/cart.js')
        .then(response => response.json())
        .then(data => {
          const total = data.items_subtotal_price / 100; // em reais
          const remaining = threshold - total;

          if (remaining > 0) {
            bar.innerHTML = `Faltam <strong>${formatCurrency(remaining)}</strong> para voc√™ atingir o frete gr√°tis!`;
            bar.style.backgroundColor = "#f0f9ff";
            bar.style.color = "#333";
          } else {
            bar.innerHTML = `üéâ Voc√™ garantiu frete gr√°tis!`;
            bar.style.backgroundColor = "#d1fae5";
            bar.style.color = "#065f46";
          }
        })
        .catch(error => {
          bar.innerHTML = "Erro ao calcular frete gr√°tis.";
        });
    }

    updateFreeShippingBar();
  });
</script>
